[user]
    useConfigOnly = true

[include]
	path = ~/.config/.gitconfig.local

[init]
	defaultBranch = main

[push]
    followTags = true

[advice]
	detachedHead = false
	statusHints = false

[alias]
	a = add
	ua = restore --staged

	b = branch

	c = commit
	ca = commit --amend
	co = checkout
	cp = cherry-pick

	d = diff

	s = status

	sh = show --pretty=format:'%C(magenta)Author: %C(red)%an <%ae>%n%C(magenta)Date: %C(yellow)%ad%n%C(magenta)Hash: %C(blue)%H%n%n%s%n%n%b%n' --date=format:'%d/%b/%Y %H:%M:%S'

	f = fetch

	p = pull
	P = push
	PF = push --force-with-lease

	l = log --graph --abbrev-commit --decorate --date=format:%d/%b/%Y --pretty=format:'%C(blue)%h%Creset %C(red)%an %C(yellow)%ad%Creset %s'

	ri = rebase -i
	ra = rebase --abort
	rc = rebase --continue
	rs = rebase --skip
	re = remote
	rea = remote add

	ss = stash
	sl = stash list
	sp = stash pop

	t = tag
	tl = tag --list

	bi = bisect
	bis = bisect start
	bib = bisect bad
	big = bisect good
	bir = bisect run
	birs = bisect reset

	contributors = shortlog --summary --numbered --email
